<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0,1"
            android:stretchColumns="0,1">

            <TableRow>

                <TextView
                    android:id="@+id/radiant_01"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/dire_01"
                    android:gravity="center" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/radiant_02"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/dire_02"
                    android:gravity="center" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/radiant_03"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/dire_03"
                    android:gravity="center" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/radiant_04"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/dire_04"
                    android:gravity="center" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/radiant_05"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/dire_05"
                    android:gravity="center" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
